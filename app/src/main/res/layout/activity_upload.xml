<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UploadActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/orange_border"
            android:layout_marginBottom="65dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Data"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/cute"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload image"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/cute"/>
            <ImageView
                android:layout_width="321.260dp"
                android:layout_height="321.260dp"
                android:src="@drawable/uploading"
                android:id="@+id/uploadImage"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadFirst"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Firstname"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadLast"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Lastname"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadMid"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Middlename"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadAge"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Age"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadSex"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Sex"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadBirthday"
                android:background="@drawable/cute_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Birthday (MM/DD/YYYY)"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadMarital"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Marital Status"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadNumber"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Contact Number"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadAddress"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Address (Purok#/Mun./Prov.)"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadOccu"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Occupation (N/A - no occu.)"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadReg"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Religion"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadHoNum"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Household No."
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/levelEduc"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Level of Education"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/soloParent"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Solo Parent (Yes/No) (N/A)"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/seniorCitizen"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Registered Senior Citizen (Yes/No) (N/A)"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/registeredVoter"
                android:background="@drawable/orange_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Registered Voter Yes/No) (N/A)"
                android:gravity="start|center_vertical"
                android:textColor="@color/cute"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>